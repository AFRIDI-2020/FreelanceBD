<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_gradient_color"
    tools:context=".Activity.RegisterVerificationActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/whiteColor"
                    android:text="Hi "/>

                <TextView
                    android:id="@+id/givenName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textColor="@color/whiteColor"
                    android:text="name"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text=","/>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textColor="@color/whiteColor"
                android:text="Thank you for registering on FreelanceBD. We are going to send a verification email to your email address."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:orientation="vertical"
                >


            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteColor"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Check Email to verify account and then log in"/>

            <ProgressBar
                android:layout_marginTop="3dp"
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"/>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHint="#FFFFFF"
                app:boxBackgroundColor="#80000000"
                app:boxStrokeColor="#000000"
                app:boxStrokeWidth="0.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColorHint="#000000"
                    android:inputType="textEmailAddress"
                    android:drawablePadding="5dp"
                    android:textColor="@color/whiteColor"
                    android:drawableLeft="@drawable/ic_email_black_24dp"/>


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                app:passwordToggleEnabled="true"
                app:passwordToggleDrawable="@drawable/visibility_selector_white"
                app:passwordToggleTint="@color/whiteColor"
                android:layout_marginTop="5dp"
                android:textColorHint="#FFFFFF"
                app:boxBackgroundColor="#80000000"
                app:boxStrokeColor="#000000"
                app:boxStrokeWidth="0.5dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColorHint="#000000"
                    android:inputType="textPassword"
                    android:drawablePadding="5dp"
                    android:textColor="@color/whiteColor"
                    android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                    android:drawableStart="@drawable/ic_vpn_key_black_24dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/logInBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/sign_in_button_background"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                android:text="Log in"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="By logging, you are agree with our"
                        android:textSize="14sp"
                        android:textColor="@color/whiteColor"/>

                    <TextView
                        android:id="@+id/termsOfServiceTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms of Service"
                        android:textSize="14sp"
                        android:textColor="@color/whiteColor"
                        android:layout_gravity="center_horizontal"
                        android:textStyle="bold"/>


                </LinearLayout>
        </LinearLayout>


        </LinearLayout>

</RelativeLayout>