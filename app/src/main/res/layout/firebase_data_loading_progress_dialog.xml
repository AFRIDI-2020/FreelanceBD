<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/app_gradient_color"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please, wait."
        android:textColor="@color/whiteColor"
        android:textSize="20sp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="loading data"
            android:textColor="@color/whiteColor"
            android:textSize="20sp"
            android:textStyle="bold" />


        <com.agrawalsuneet.dotsloader.loaders.LinearDotsLoader
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            app:loader_animDur="600"
            app:loader_circleRadius="2dp"
            app:loader_defaultColor="#00BFA5"
            app:loader_dotsDist="3dp"
            app:loader_expandOnSelect="false"
            app:loader_firstShadowColor="#00BFA5"
            app:loader_isSingleDir="true"
            app:loader_noOfDots="3"
            app:loader_secondShadowColor="#00BFA5"
            app:loader_selectedColor="@color/whiteColor"
            app:loader_selectedRadius="10dp"
            app:loader_showRunningShadow="true" />


    </LinearLayout>


</LinearLayout>